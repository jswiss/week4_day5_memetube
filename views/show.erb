<div class="row">
  <div class="col s6 offset-s3">
    <div class="card">
      <div class="card-content white-text">
        <span class="card-title"><%= @video['title'] %></span>
        <p><%= @video['description'] %></p>
      </div>
      <div class="iframe">
        <iframe width="510" height="315" src="http://www.youtube.com/embed/<% @video['url'][-11..-1] %>" frameborder="0" allowfullscreen></iframe>
      </div>
      <div class="card-action">
        <a href="/videos/<%= @video['id'] %>/edit">edit</a>
        <form action="/videos/<%= @video['id'] %>" method="post">
          <button class="fake-link">delete</button>
        </form>
      </div>
    </div>
  </div>
</div>


